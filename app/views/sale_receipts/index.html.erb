<div id="sale-receipt" class="row">
  <div class="col-md-9">
    <ol class="breadcrumb">
      <li><%= link_to "", root_path, class: "glyphicon glyphicon-home" %></li>
      <li class="active"><%= t "sale_receipt.title" %></li>
    </ol>
    <div class="create-invoice-header">
      <span class="title"><%= t "sale_receipt.title" %></span>
      <span class="btn-navigate pull-right">
        <%= link_to "", "javascript:void(0)", class: "btn btn-default btn-next glyphicon glyphicon-chevron-left" %>
        <%= link_to "", "javascript:void(0)", class: "btn btn-default btn-prev glyphicon glyphicon-chevron-right" %>
        <%= link_to t("sale_receipt.actions.add_new"), new_sale_receipt_path,
          class: "btn btn-primary" %>
      </span>
    </div>
    <hr>
    <div class="sale-receipt">
      <%= render "sale_receipt_data" %>
    </div>
  </div>
</div>
